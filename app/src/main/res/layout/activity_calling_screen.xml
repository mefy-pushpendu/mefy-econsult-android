<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CallingScreen">

    <RelativeLayout
        android:id="@+id/imagelayoutone"
        android:layout_weight=".6"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="horizontal"
        android:paddingTop="100dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imageviewone"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="129dp"
            android:src="@drawable/mefy_logo"
            app:civ_border_color="#ffffff"
            app:civ_border_width="1dp"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="168dp" />
        <TextView
            android:id="@+id/name"
            android:layout_below="@+id/imageviewone"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:textColor="@color/purple"
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I'm the Person"/>
        <TextView
            android:id="@+id/additional"
            android:layout_below="@+id/name"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:textSize="12dp"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please accept my call..."/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/bottomPanel"
        android:layout_below="@+id/imagelayoutone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight=".4">

        <!--<android.support.v7.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />-->

        <Button
            android:id="@+id/call_received"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentEnd="true"
            android:textSize="12sp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="70dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/call_received_button"/>

        <Button
            android:id="@+id/call_end"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignTop="@+id/call_received"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="90dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="-1dp"
            android:textSize="12sp"
            android:background="@drawable/call_end_button"
            android:textColor="#FFF" />

    </RelativeLayout>
</LinearLayout>

